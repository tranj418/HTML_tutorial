#p1{
    width: 100px;
    height: 100px;
    background-color: red;
    font-size: 85px;
    text-align: center;
    margin: 0px;

    animation: fontAnimation;
    animation-duration: 5s;/*This is in seconds*/
    animation-iteration-count: infinite; /*This will cause animation to occur continuously*/
}

#p1:hover{

    animation: fontAnimation;
    animation-duration: 5s;/*This is in seconds*/
    animation-iteration-count: infinite; /*This will cause animation to occur continuously*/
}


/*Create a key frame rule the animation itself*/
/*element will act based upon animation rule*/

@keyframes myColorAnimation{
    0%{background-color: red;}
    20%{background-color:orange;}
    40%{background-color: gold;}
    60%{background-color: aqua;}
    80%{background-color: green;}
    100%{background-color: purple;}
}
/*When element is at x% of the animation process then do next step*/

@keyframes animationRotation{
    100%{transform: rotateX(360deg);}
    /*100%{transform: rotateZ(360deg);}*/
    100%{transform: rotateY(360deg);}
    
}

@keyframes animationTranslate{
    60%{transform: translate(100px, 100px);}

}

@keyframes scaleAnimation{
    50%{transform: scale(2,2);}
}

@keyframes myOpacity{
    0%{opacity:0;}
    50%{opacity:1;}
    100%{opacity:0;}
}

@keyframes fontAnimation{
    20%{font-size: 85px;}
    50%{font-size: 400px;}


}

